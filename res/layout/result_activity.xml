<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCAA" >
    
     <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <Button
          android:id="@+id/result_share"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:layout_weight="2"
            android:background="#B04024"
            android:text="Share"
            android:drawableRight="@android:drawable/ic_menu_share"
            android:textColor="#FFFFFF"
            android:onClick="onClickShare" />

        <Button
            android:id="@+id/result_back"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:layout_weight="2"
            android:background="#B04024"
            android:onClick="onClickBack"
            android:text="Back"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/result_next_level"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:layout_weight="2"
            android:background="#B04024"
            android:text="Next Level"
            android:textColor="#FFFFFF" 
            android:onClick="onClickNext"/>
    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="25dp"
        android:weightSum="10" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Score" />

        <TextView
            android:id="@+id/result_scrore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tableRow1"
        android:layout_marginTop="19dp"
        android:weightSum="10" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Time Used" />

        <TextView
            android:id="@+id/result_time_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="TextView" />
    </TableRow>

</RelativeLayout>
